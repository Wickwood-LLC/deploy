<?php

/**
 * @file
 * UI module to deploy content entities.
 */

use Drupal\Core\Url;

/**
 * Implements hook_toolbar().
 */
function deploy_toolbar() {
  $items = [];

  $items['deploy'] = [
    '#type' => 'toolbar_item',
     'tab' => [
       '#type' => 'link',
       '#title' => t('Deploy'),
       '#url' => Url::fromRoute('entity.replication.add_form'),
       '#attributes' => [
         'title' => t('Deploy the content'),
         'class' => ['toolbar-icon', 'toolbar-icon-deploy'],
       ],
     ],
    '#wrapper_attributes' => [
      'class' => ['deploy-toolbar-tab'],
    ],
     '#attached' => [
       'library' => [
         'deploy/drupal.deploy.toolbar',
       ],
     ],
  ];

  return $items;
}
